<odoo>
    <record id="view_employee_form" model="ir.ui.view">
        <field name="name">salon.employee.form</field>
        <field name="model">salon.employee</field>
        <field name="arch" type="xml">
            <form string="Nhân viên">
                <sheet>
                    <group string="Thông tin nhân viên">
                        <group>
                            <field name="ma_nv" readonly="1"/>
                            <field name="ten_nv" required="1"/>
                            <field name="gioi_tinh" widget="radio"/>
                            <field name="chuc_vu" required="1"/>
                            <field name="sdt" required="1"/>
                            <field name="ngay_sinh"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_employee_tree" model="ir.ui.view">
        <field name="name">salon.employee.tree</field>
        <field name="model">salon.employee</field>
        <field name="arch" type="xml">
            <list string="Danh sách nhân viên" default_order="ten_nv asc">
                <field name="ma_nv"/>
                <field name="ten_nv"/>
                <field name="gioi_tinh"/>
                <field name="chuc_vu"/>
                <field name="sdt"/>
                <field name="ngay_sinh"/>

                <button name="action_open_form_view" type="object" string="Xem" class="btn-link" icon="fa-eye"/>
                <button name="action_open_edit" type="object" string="Sửa" class="btn-primary" icon="fa-pencil"/>
                <button name="action_delete_record" type="object" string="Xóa" class="btn-danger" icon="fa-trash"/>
            </list>
        </field>
    </record>

    <record id="view_employee_search" model="ir.ui.view">
        <field name="name">salon.employee.search</field>
        <field name="model">salon.employee</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm Nhân viên">
                <field name="ten_nv" string="Tên"/>
                <field name="chuc_vu" string="Chức vụ"/>
                <filter string="Nam" name="filter_nam" domain="[('gioi_tinh','=','nam')]"/>
                <filter string="Nữ" name="filter_nu" domain="[('gioi_tinh','=','nu')]"/>
            </search>
        </field>
    </record>

    <record id="action_employee" model="ir.actions.act_window">
        <field name="name">Nhân viên</field>
        <field name="res_model">salon.employee</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_employee_list" name="Nhân viên" parent="salon_management.menu_salon_root" action="action_employee" sequence="6"/>
</odoo>

