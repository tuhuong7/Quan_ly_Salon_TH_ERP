<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Kanban View cho Nhân viên -->
    <record id="view_employee_kanban" model="ir.ui.view">
        <field name="name">salon.employee.kanban</field>
        <field name="model">salon.employee</field>
        <field name="arch" type="xml">
            <kanban default_group_by="chuc_vu" class="o_kanban_small_column">
                <field name="ten_nv"/>
                <field name="ma_nv"/>
                <field name="chuc_vu"/>
                <field name="gioi_tinh"/>
                <field name="sdt"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <div class="oe_kanban_avatar">
                                    <i class="fa fa-user-circle fa-3x text-primary"/>
                                </div>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="ten_nv"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle text-muted">
                                            <field name="ma_nv"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-12">
                                            <i class="fa fa-briefcase"/> 
                                            <field name="chuc_vu"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-12">
                                            <i class="fa fa-phone"/> 
                                            <field name="sdt"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-12">
                                            <field name="gioi_tinh" widget="badge"
                                                   decoration-info="gioi_tinh == 'nam'"
                                                   decoration-warning="gioi_tinh == 'nu'"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Graph View cho Nhân viên -->
    <record id="view_employee_graph" model="ir.ui.view">
        <field name="name">salon.employee.graph</field>
        <field name="model">salon.employee</field>
        <field name="arch" type="xml">
            <graph string="Thống kê nhân viên" type="pie">
                <field name="chuc_vu" type="row"/>
                <field name="id" type="measure"/>
            </graph>
        </field>
    </record>
</odoo>

