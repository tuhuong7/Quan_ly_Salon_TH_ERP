<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_salon_service_form" model="ir.ui.view">
        <field name="name">salon.service.form</field>
        <field name="model">salon.service</field>
        <field name="arch" type="xml">
            <form string="Chi tiết dịch vụ">
                <sheet>
                    <group>
                        <field name="code" readonly="1" required="0"/>
                        <field name="name"/>
                        <field name="service_type"/>
                        <field name="duration"/>
                        <field name="price"/>
                        <field name="status"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

