  <menuitem id="menu_salon_customer_root" name="Khách hàng" parent="salon_management.menu_salon_root" action="action_salon_customer" sequence="3"/>

  <record id="action_customer_create" model="ir.actions.server">
    <field name="name">Tạo thông tin khách</field>
    <field name="model_id" ref="salon_customer.model_salon_customer"/>
    <field name="binding_model_id" ref="salon_customer.model_salon_customer"/>
    <field name="binding_type">action</field>
    <field name="state">code</field>
    <field name="code"><![CDATA[
action = env['salon.customer'].action_create_customer()
]]></field>
  </record>

  <record id="action_salon_edit" model="ir.actions.server">
    <field name="name">Sửa</field>
    <field name="model_id" ref="salon_customer.model_salon_customer"/>
