    <field name="binding_type">action</field>
    <field name="state">code</field>
    <field name="code"><![CDATA[
action = env['salon.customer'].action_edit_customer()
]]></field>
  </record>

    <record id="action_salon_delete" model="ir.actions.server">
    <field name="name">Xoá</field>
    <field name="model_id" ref="salon_customer.model_salon_customer"/>
    <field name="binding_model_id" ref="salon_customer.model_salon_customer"/>
    <field name="binding_type">action</field>
    <field name="state">code</field>
