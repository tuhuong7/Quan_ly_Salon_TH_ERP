<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_salon_appointment_search" model="ir.ui.view">
            <field name="name">salon.appointment.search</field>
            <field name="model">salon.appointment</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm lịch hẹn">
                    <field name="code" string="Mã lịch hẹn"/>
                    <field name="customer_id" string="Khách hàng"/>
                    <field name="phone" string="Số điện thoại"/>
                    <field name="employee_id" string="Nhân viên"/>
                    <separator/>
                    <filter string="Đang chờ" name="pending" domain="[('state','=','pending')]"/>
                    <filter string="Đã xác nhận" name="confirmed" domain="[('state','=','confirmed')]"/>
                    <filter string="Đang thực hiện" name="processing" domain="[('state','=','processing')]"/>
                    <filter string="Đã hoàn thành" name="done" domain="[('state','=','done')]"/>
                    <filter string="Đã hủy" name="cancel" domain="[('state','=','cancel')]"/>
                </search>
            </field>
        </record>


        <record id="action_salon_appointment" model="ir.actions.act_window">
            <field name="name">Lịch Hẹn Salon</field>
            <field name="res_model">salon.appointment</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="search_view_id" ref="view_salon_appointment_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo lịch hẹn mới cho khách hàng của bạn.
                </p>
            </field>
        </record>

        <menuitem id="menu_salon_appointment"
                name="Lịch Hẹn"
                parent="salon_management.menu_salon_root"
                action="action_salon_appointment"
                sequence="2"/>
                
        <record id="action_update_appointment_codes" model="ir.actions.server">
            <field name="name">Cập nhật mã lịch hẹn</field>
            <field name="model_id" ref="model_salon_appointment"/>
            <field name="binding_model_id" ref="model_salon_appointment"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
appointments = env['salon.appointment'].search([('code', '=', 'New')])
if appointments:
    for appointment in appointments:
        sequence = env['ir.sequence'].next_by_code('salon.appointment.sequence') or 'New'
        appointment.write({'code': sequence})
            </field>
        </record>

        <record id="view_salon_appointment_kanban" model="ir.ui.view">
            <field name="name">salon.appointment.kanban</field>
            <field name="model">salon.appointment</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="id"/>
                    <field name="code"/>
                    <field name="customer_id"/>
                    <field name="phone"/>
                    <field name="date_appointment"/>
                    <field name="service_ids"/>
                    <field name="service_names"/>
                    <field name="employee_id"/>
                    <field name="state"/>
                    <field name="note"/>
                    <progressbar field="state" colors='{"pending": "warning", "confirmed": "info", "processing": "primary", "done": "success", "cancel": "danger"}'/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="code"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="customer_id"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <i class="fa fa-phone"/> <field name="phone"/>
                                        </div>
                                        <div class="col-6">
                                            <i class="fa fa-user"/> <field name="employee_id"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-12">
                                            <div style="display: flex; align-items: center;">
                                                <i class="fa fa-calendar" style="margin-right: 8px;"/>
                                                <field name="date_appointment" widget="datetime" nolabel="1"/>
                                            </div>
                                        </div>
                                    </div>
                                    <t t-if="record.service_names.raw_value">
                                        <div class="row mt-2">
                                            <div class="col-12">
                                                <i class="fa fa-scissors" style="margin-right: 8px;"/>
                                                <field name="service_names" nolabel="1"/>
                                            </div>
                                        </div>
                                    </t>
                                    <t t-if="record.note.raw_value">
                                        <div class="row mt-2">
                                            <div class="col-12">
                                                <i class="fa fa-comment"/> <field name="note"/>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_salon_appointment_tree" model="ir.ui.view">
            <field name="name">salon.appointment.tree</field>
            <field name="model">salon.appointment</field>
            <field name="arch" type="xml">
                <list>
                    <field name="code"/>
                    <field name="customer_id"/>
                    <field name="phone"/>
                    <field name="date_appointment"/>
                    <field name="arrival_time"/>
                    <field name="service_ids" widget="many2many_tags"/>
                    <field name="employee_id"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="view_salon_appointment_form" model="ir.ui.view">
            <field name="name">salon.appointment.form</field>
            <field name="model">salon.appointment</field>
            <field name="arch" type="xml">
                <form string="Lịch Hẹn Salon">
                    <header>
                        <button name="action_confirm" string="Xác nhận" type="object"
                                class="btn-info"
                                invisible="state != 'pending'"/>
                        <button name="action_start" string="Bắt đầu" type="object"
                                class="btn-primary"
                                invisible="state not in ['pending', 'confirmed']"/>
                        <button name="action_done" string="Hoàn tất" type="object"
                                class="btn-success" invisible="state != 'processing'"/>
                        <button name="action_create_invoice" string="Tạo hóa đơn" type="object"
                                class="btn-info" invisible="state != 'done'"/>
                        <button name="action_cancel" string="Huỷ" type="object"
                                class="btn-danger"
                                invisible="state in ['done', 'cancel']"/>
                        <field name="state" widget="statusbar" statusbar_visible="pending,confirmed,processing,done,cancel"/>
                    </header>

                    <sheet>
                        <group>
                            <group>
                                <field name="code" readonly="1" required="0"/>
                                <field name="customer_id" 
                                    options="{'no_create': False, 'no_create_edit': False}"/>
                                <field name="phone"/>
                                <field name="employee_id"/>
                            </group>
                            <group>
                                <field name="date_appointment"/>
                                <field name="arrival_time"/>
                                <field name="duration"/>
                                <field name="note"/>
                                <field name="cancel_reason" invisible="state != 'cancel'"
                                    readonly="1" 
                                    placeholder="Lý do hủy lịch hẹn..."/>
                            </group>
                        </group>
                        <group string="Dịch vụ" col="1">
                            <field name="service_ids" nolabel="1">
                                <list editable="bottom" default_order="sequence" class="o_list_view">
                                    <field name="sequence" widget="handle" optional="hide" width="30"/>
                                    <field name="service_id" required="1" string="Dịch vụ" options="{'no_create': True}" column_invisible="0"/>
                                    <field name="quantity" default="1" string="Số lượng" width="100"/>
                                </list>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
