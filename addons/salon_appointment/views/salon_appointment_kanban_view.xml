<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_salon_appointment_kanban" model="ir.ui.view">
        <field name="name">salon.appointment.kanban</field>
        <field name="model">salon.appointment</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="id"/>
                <field name="code"/>
                <field name="customer_id"/>
                <field name="phone"/>
                <field name="date_appointment"/>
                <field name="service_ids"/>
                <field name="service_names"/>
                <field name="employee_id"/>
                <field name="state"/>
                <field name="note"/>
                <progressbar field="state" colors='{"pending": "warning", "confirmed": "info", "processing": "primary", "done": "success", "cancel": "danger"}'/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="code"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="customer_id"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-6">
                                        <i class="fa fa-phone"/> <field name="phone"/>
                                    </div>
                                    <div class="col-6">
                                        <i class="fa fa-user"/> <field name="employee_id"/>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <div style="display: flex; align-items: center;">
                                            <i class="fa fa-calendar" style="margin-right: 8px;"/>
                                            <field name="date_appointment" widget="datetime" nolabel="1"/>
                                        </div>
                                    </div>
                                </div>
                                <t t-if="record.service_names.raw_value">
                                    <div class="row mt-2">
                                        <div class="col-12">
                                            <i class="fa fa-scissors" style="margin-right: 8px;"/>
                                            <field name="service_names" nolabel="1"/>
                                        </div>
                                    </div>
                                </t>
                                <t t-if="record.note.raw_value">
                                    <div class="row mt-2">
                                        <div class="col-12">
                                            <i class="fa fa-comment"/> <field name="note"/>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>

