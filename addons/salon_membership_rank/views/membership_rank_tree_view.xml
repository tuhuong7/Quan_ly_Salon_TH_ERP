<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_membership_rank_tree" model="ir.ui.view">
        <field name="name">salon.membership.rank.tree</field>
        <field name="model">salon.membership.rank</field>
        <field name="arch" type="xml">
            <list string="Danh sách hạng thành viên" default_order="min_total_spent desc">
                <field name="code"/>
                <field name="name"/>
                <field name="min_total_spent" widget="monetary" options="{'decimal_places': 0}"/>
                <field name="currency_id" invisible="1" column_invisible="1"/>
                <field name="min_visit_count"/>
                <field name="discount_percentage" string="Chiết khấu (%)"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>
</odoo>

