<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_membership_rank_form" model="ir.ui.view">
        <field name="name">salon.membership.rank.form</field>
        <field name="model">salon.membership.rank</field>
        <field name="arch" type="xml">
            <form string="Hạng thành viên">
                <sheet>
                    <group>
                        <group>
                            <field name="code" readonly="1"/>
                            <field name="name" required="1"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="min_total_spent" widget="monetary" options="{'decimal_places': 0}"/>
                            <field name="min_visit_count"/>
                            <field name="discount_percentage"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Mô tả về hạng thành viên..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_membership_rank_tree" model="ir.ui.view">
        <field name="name">salon.membership.rank.tree</field>
        <field name="model">salon.membership.rank</field>
        <field name="arch" type="xml">
            <list string="Danh sách hạng thành viên" default_order="min_total_spent desc">
                <field name="code"/>
                <field name="name"/>
                <field name="min_total_spent" widget="monetary" options="{'decimal_places': 0}"/>
                <field name="currency_id" invisible="1" column_invisible="1"/>
                <field name="min_visit_count"/>
                <field name="discount_percentage" string="Chiết khấu (%)"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="view_membership_rank_search" model="ir.ui.view">
        <field name="name">salon.membership.rank.search</field>
        <field name="model">salon.membership.rank</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm hạng thành viên">
                <field name="name" string="Tên hạng"/>
                <field name="code" string="Mã hạng"/>
                <filter string="Hoạt động" name="active" domain="[('active', '=', True)]"/>
                <filter string="Không hoạt động" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_membership_rank" model="ir.actions.act_window">
        <field name="name">Hạng thành viên</field>
        <field name="res_model">salon.membership.rank</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_membership_rank_search"/>
    </record>

    <menuitem id="menu_membership_rank_root" 
              name="Hạng thành viên" 
              parent="salon_management.menu_salon_root" 
              action="action_membership_rank"
              sequence="8"/>
</odoo>

