<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="action_salon_service_history" model="ir.actions.act_window">
    <field name="name">Lịch sử giao dịch</field>
    <field name="res_model">salon.service.history</field>
        <field name="view_mode">list,form</field>
    <field name="view_id" ref="view_salon_service_history_tree"/>
    <field name="context">{'search_default_group_by_date': 1}</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Chưa có lịch sử giao dịch nào
      </p>
      <p>
        Lịch sử giao dịch sẽ được tạo tự động khi có giao dịch dịch vụ.
        Bạn có thể xem thống kê theo ngày, tháng, năm hoặc theo khách hàng.
      </p>
    </field>
  </record>

  <menuitem id="menu_salon_service_history" 
            name="Lịch sử giao dịch" 
            parent="salon_management.menu_salon_root" 
            action="action_salon_service_history"
            sequence="10"/>
</odoo>

