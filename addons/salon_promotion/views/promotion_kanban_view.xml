<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Kanban view -->
    <record id="view_promotion_kanban" model="ir.ui.view">
        <field name="name">salon.promotion.kanban</field>
        <field name="model">salon.promotion</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="code"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="discount_type"/>
                <field name="discount_value"/>
                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle text-muted">
                                            <field name="code"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-12">
                                            <i class="fa fa-calendar"/> 
                                            <field name="date_start"/> - <field name="date_end"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-12">
                                            <i class="fa fa-percent"/> 
                                            <field name="discount_type"/>: <field name="discount_value"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-12">
                                            <field name="state" widget="badge"
                                                   decoration-success="state == 'active'"
                                                   decoration-muted="state == 'expired'"
                                                   decoration-danger="state == 'cancelled'"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>

